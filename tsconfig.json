{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": { "/*": ["./*"] },
    "module": "es6",
    "strict": true,
    "target": "es2016",
    "outDir": "dist"
  },
  "include": [
    "src/**/*",
    "src/*"
  ],
  "exclude": [
    "node_modules",
    "**/node_modules/*"
  ]
}
